{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": ["eslint:recommended"],
    "plugins": [
        "@typescript-eslint", "prettier"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": [
        "warn",
            {
                "selector": "variable",
                "format": ["camelCase", "UPPER_CASE", "PascalCase"]
            }
        ],
        "@typescript-eslint/semi": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off",
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "no-unused-vars": "off"
    },
    "ignorePatterns": [
        "node_modules/",
        "out",
        "dist",
        "**/*.d.ts"
    ],
    "env": {
        "node": true,
        "browser": true
    }
}
